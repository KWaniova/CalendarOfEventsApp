{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@types/*": ["types/*"],
      "@schemas/*": ["schemas/*"],
      "@actions/*": ["actions/*"],
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "target": "ES2020",
    "baseUrl": "./",
    "lib": ["ES2021", "dom", "dom.iterable"],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}